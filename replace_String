import java.util.*;
class replace_String
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
  System.out.println("Enter a string");
  String str=sc.nextLine();
  System.out.print("Enter a postion you want=");
  int pos=sc.nextInt();
  System.out.print("Enter a new string=");

  String  newStr=sc.next();

  String s[] = str.split(" "); 
      for (int i = 0;i <s.length; i++) { 

    StringBuffer rep = new StringBuffer(s[i]);

         rep.insert(pos, newStr);

     System.out.print(" "+rep.toString());
   

      } 
      
}
}
    
 
