import java.util.*;
class Dimondpattern
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int n=sc.nextInt();
int b=n+1;
int i,j,k;
for(i=1;i<=n;i++)
{
for( j=n-1;j>=i;j--){
System.out.print("  ");
}
for( j=1; j<=(2*i-1);j++){
System.out.print(" * ");

}
System.out.println("\n");
}

for(i=1;i<=b;i++)
{
for( j=1;j<=i;j++){ 
System.out.print("  ");
}
for( j=b; j>=(2*i-1);j--){
System.out.print(" * ");

}
System.out.println("\n");
}

}
}
